@model IEnumerable<Consume.Models.Product>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 0 auto;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background: white;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        img {
            width: 100px;
            height: auto;
            border-radius: 5px;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            color: white;
        }

        .edit-btn {
            background-color: #007BFF;
        }

        .delete-btn {
            background-color: #FF4136;
        }

        .add-product-btn {
            display: block;
            margin: 20px auto;
            padding: 10px 15px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            width: 200px;
        }

        .logout-btn {
            display: block;
            margin: 20px auto;
            padding: 10px 15px;
            background-color: #dc3545;
            color: white;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            width: 200px;
        }
    </style>
</head>
<body>

    <h1>Ürünler</h1>

    <a class="add-product-btn" href="@Url.Action("Create", "Product")">Yeni Ürün Ekle</a>
    <a class="logout-btn" href="#" onclick="logout(); return false;">Çıkış Yap</a>

    <table>
        <thead>
            <tr>
                <th>Fotoğraf</th>
                <th>Ad</th>
                <th>Marka</th>
                <th>Açıklama</th>
                <th>Fiyat</th>
                <th>Stok</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var product in Model)
                {
                    <tr>
                        <td><img src="@product.ImageUrl" alt="@product.Name" /></td>
                        <td>@product.Name</td>
                        <td>@product.Brand</td>
                        <td>@product.Description</td>
                        <td>@product.Price.ToString("C2")</td>
                        <td>@product.StockQuantity</td>
                        <td>
                            <div class="action-buttons">
                                <a class="btn edit-btn" href="@Url.Action("Edit", "Product", new { id = product.Id })">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                <form action="@Url.Action("Delete", "Product", new { id = product.Id })" method="post" style="display:inline;">
                                    <button type="submit" class="btn delete-btn" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                        <i class="fas fa-trash-alt"></i> Sil
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">Hiç ürün bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>

    <script>
        async function logout() {
            const response = await fetch('https://localhost:5001/api/Auth/logout', {
                method: 'POST',
                headers: {
                    'Authorization': 'Bearer ' + sessionStorage.getItem("Token"),
                    'Content-Type': 'application/json'
                }
            });

            if (response.ok) {
                alert("Çıkış yapıldı.");
                sessionStorage.removeItem("Token");
                window.location.href = '/Auth/Login'; // Giriş sayfasının Url si
            } else {
                alert("Çıkış yapılamadı.");
            }
        }
    </script>

</body>
</html>
